%h2 新規登録

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, input_html: { autocomplete: 'name' }
    = f.input :email, required: true, input_html: { autocomplete: 'email' }
    - if f.object.avatar.representable?
      = f.input :avatar, as: :hidden, input_html: { value: f.object.avatar.signed_id }
    = f.input :avatar, input_html: { direct_upload: true, accept: 'image/jpeg, image/jpg, image/gif, image/png' }
    - if f.object.avatar.representable?
      = image_tag f.object.avatar.variant(:small), alt: '添付画像', class: 'rounded-circle mb-2'
    = f.input :password, required: true, hint: '6文字以上のパスワードにしてください', input_html: { autocomplete: 'new-password' }
    = f.input :password_confirmation, required: true, input_html: { autocomplete: 'new-password' }
  .form-actions.mb-3
    = f.button :submit

%p= link_to '有効化のメールが届いていませんか？', new_user_confirmation_path
%p= link_to "パスワードを忘れましたか？", new_user_password_path
