.mb-3
  %span.fs-5= @event.title
  - if @event.published?
    %span.badge.text-bg-success 公開
  - else
    %span.badge.text-bg-secondary 非公開

.row
  .col-md-2
    .list-group
      = link_to '編集する', '#', class: 'list-group-item list-group-item-action'
      = link_to '削除する', '#', class: 'list-group-item list-group-item-action text-danger'
  .col-md-10
    .card
      .card-body
        %h5.card-title= @event.title
        %h6.card-subtitle.mb-2.text-body-secondary= @event.category.text
        .text-muted= "開始日： #{l @event.start_at}"
        .text-muted= "終了日： #{l @event.end_at}"
        %p.card-text= @event.description
