%h1= @event.title

= simple_form_for [:admins, @event] do |f|
  = f.input :title
  = f.input :description, input_html: { rows: 5 }
  = f.input :place
  = f.input :start_at, html5: true
  = f.input :end_at, html5: true
  = f.input :category, include_blank: false
  = f.input :published
  = f.button :submit
