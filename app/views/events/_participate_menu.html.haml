.card.text-bg-light
  .card-body
    .card-title イベント参加
    %p.card-text= "参加中：#{event.participate_users.size}人"
    - if event.not_ended?
      - if current_user&.participate?(event)
        = link_to event_participation_path(event), class: 'btn btn-sm btn-secondary w-100', data: { turbo_method: :delete } do
          %i.bi.bi-slash-circle
          キャンセル
      - else
        = link_to event_participation_path(event), class: 'btn btn-sm btn-secondary w-100', data: { turbo_method: :post } do
          %i.bi.bi-plus-circle-dotted
          参加する
